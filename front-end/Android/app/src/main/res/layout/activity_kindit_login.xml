<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/kinditMainColor1"
    tools:context=".view.account.KindItLoginActivity">

    <ImageView
        android:id="@+id/su_img_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/kl_tv_find_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/kl_tv_find_email"
        android:textColor="@color/kinditMainColor1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/kl_tv_find_password"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/kl_tv_find_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kl_tv_find_password"
        android:textColor="@color/kinditMainColor1"
        app:layout_constraintBottom_toBottomOf="@+id/kl_tv_find_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/kl_tv_find_email"
        app:layout_constraintTop_toTopOf="@+id/kl_tv_find_email"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/kl_btn_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/login_button"
        android:text="@string/login_btn_login"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/kl_tv_find_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/kl_edt_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/kinditMainColor1"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:shadowColor="@color/kinditMainColor1"
        android:text="!Msno2"
        android:textColorHighlight="@color/kinditMainColor1"
        android:textColorLink="@color/kinditMainColor1"
        app:layout_constraintBottom_toTopOf="@+id/kl_btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/su_tv_pass1"
        android:textColor="@color/kinditMainColor1"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/kl_edt_password"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/kl_edt_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/kinditMainColor1"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text"
        android:maxLines="1"
        android:text="msno2@naver.com"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/su_tv_email"
        android:textColor="@color/kinditMainColor1"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/kl_edt_email"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="32dp"
        android:text="@string/login_btn_login"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="120dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/su_img_back"
        app:srcCompat="@drawable/kindit_logo2" />

</androidx.constraintlayout.widget.ConstraintLayout>